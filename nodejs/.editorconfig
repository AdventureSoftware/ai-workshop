# EditorConfig helps maintain consistent coding styles
# Copilot respects these settings for better code generation
# Based on presentation: ".editorconfig â€“ Copilot respects indent, max-line, quote style"

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100
quote_type = single

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[package.json]
indent_style = space
indent_size = 2